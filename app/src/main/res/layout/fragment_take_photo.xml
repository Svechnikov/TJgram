<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/message"
                  android:visibility="gone"
                  android:layout_centerInParent="true" />

        <SurfaceView android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:visibility="gone"
                     android:id="@+id/surfaceView" />

        <io.svechnikov.tjgram.features.addpost.selectimage.takephoto.AutoFitTextureView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:id="@+id/textureView" />

        <Button android:layout_width="@dimen/take_photo_button_size"
                android:layout_height="@dimen/take_photo_button_size"
                android:layout_marginBottom="@dimen/take_photo_button_margin_bottom"
                android:background="@drawable/ic_take_photo"
                android:visibility="gone"
                android:id="@+id/takePhoto"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

    </RelativeLayout>
</layout>